@using TotalPortal.Configuration

@model TotalDTO.Commons.ICommodityBaseDTO

@Html.HiddenFor(model => model.CommodityID)

@Html.Hidden("TempName", (@Model != null ? @Model.Name : ""))


@Html.Label((ViewData["CommodityDisplayName"] != null ? (ViewData["CommodityDisplayName"]).ToString() : "Tên nhân viên"))
<div class="div-input">

    @(Html.Kendo().AutoCompleteFor(model => model.Name)
        .DataTextField("Name")
        .Filter("contains")
        .MinLength(1)
        .Placeholder("Chọn nhân viên...")
        .DataSource(source =>
        {
            source.Read(read =>
            {
                read.Action("SearchCommoditys", "CommodityAPIs", new { area = "Commons" }).Data(@<text> function(e) {return {searchText: e.filter.filters[0].value};} </text>);//Send parameter to controller search action
            })
            .ServerFiltering(true);
        })
        .Events(e =>
        {
            e.Select("commodity_Select");
        })
        .HtmlAttributes(new { @class = "CommodityBase_AutoComplete left-panel-input" })
    )

</div>
<div class="div-validation-message">
    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
</div>

<script type="text/javascript">

    getCommodityModelID = function (modelID) {
        return modelID.substring(0, modelID.length - 4); //At first: Pass: modelID = this.element.attr('id') = 'Commodity_Name', Then: Return: ('Commodity_Name').substring(0, modelID.length - 4) = 'Commodity_'
    }

    commodity_Select = function (e) {
        var modelID = getCommodityModelID(this.element.attr('id'));

        var dataItem = e.sender.dataItem(e.item.index());

        $("#" + modelID + "CommodityID").val(dataItem.CommodityID);

        //Remember last AutoComplete value
        $("#" + modelID + "TempName").val(dataItem.Name);

        //Trigger change event. This event is not used in this editor template. It will be catch out side of this editor template
        $("#" + modelID + "CommodityID").trigger("change");
    }

    $(".CommodityBase_AutoComplete").focusout(function (e) {
        var modelID = getCommodityModelID(this.id);
        $(this).val($("#" + modelID + "TempName").val());
    });

</script>
