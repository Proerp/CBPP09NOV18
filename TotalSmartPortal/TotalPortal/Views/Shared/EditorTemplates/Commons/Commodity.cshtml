@model TotalDTO.Commons.ICommodityBaseDTO

@Html.HiddenFor(model => model.CommodityID)


<div class="right-first-panel">
    <div class="form-group">
        <div class="right-panel-label">
            @Html.Label((ViewData["CommodityDisplayCode"] != null ? (ViewData["CommodityDisplayCode"]).ToString() : "Tên mặt hàng"))
        </div>
        <div class="div-input">
            @Html.Kendo().MaskedTextBoxFor(model => model.Code).HtmlAttributes(new { @class = "right-panel-input", @readonly = "readonly" })
        </div>
        <div class="div-validation-message">
            @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
        </div>
    </div>
</div>

@Html.Partial("~/Views/Helpers/Commons/_CommodityDescription.cshtml")